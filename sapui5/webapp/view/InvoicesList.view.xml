<mvc:View   controllerName="nryzy.sapui5.controller.InvoicesList"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc"
            id="ViInvoiceList">
    <List id="LiInvoiceList" 
        headerText="{i18n>invoiceListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{ path : 'northwind>/Invoices',
                 sorter : { path : 'ProductName',
                             group : true }
        }">
        <headerToolbar>
          <Toolbar id="tBInvoices">
            <Title id="tToolBar1" text="{i18n>invoiceListTitle}"/>
            <ToolbarSpacer id="tBSp1"/>
            <SearchField id="sFInvoices" width="50%" search=".onFilterInvoices"/>
          </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem id="OLI1Invoices" 
                            title="{northwind>Quantity} x {northwind>ProductName}"
                            number="{ parts : [{path : 'northwind>ExtendPrice'},
                                               {path : 'currency>/usd'}],  
                                      type : 'sap.ui.model.type.Currency',
                                      formatOptions: {
                                        showMeasure : false
                                      }}"
                            numberUnit="{currency>/usd}" 
                            numberState="{= ${northwind>ExtendPrice} > 8 ? 'Success' : 'Error' }">

            </ObjectListItem>
        </items>
    </List>

</mvc:View>